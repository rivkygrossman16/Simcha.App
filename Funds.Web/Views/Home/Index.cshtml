@model simchaView
<body>
    <div class="container">
        <main role="main" class="pb-3" style="margin-top: 60px;">

            <div class="header">
                <h1>Simchas</h1>
            </div>
            <div class="row header">
                <div class="col-md-4">
                    <button class="btn btn btn-danger" id="new-simcha">New Simcha</button>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <tr>
                        <th>Contributions</th>
                        <th>Simcha Name</th>
                        <th>Contributor Count</th>
                        <th>Total</th>
                        <th>Date</th>
                    </tr>
                    @foreach (var sim in Model.Simchos)
                    {
                        <tr>
                            <td>
                                <a class="btn btn-primary" href="/home/contributions?simchaid=@sim.id">Contributions</a>
                            </td>
                            <td>@sim.Name</td>
                            <td>
                               @sim.giver/@Model.Total
                            </td>
                            <td>@sim.TotalGiven</td>
                            <td>@sim.Date.ToShortDateString()</td>
                        </tr>
                    }

                </table>
                <div class="modal fade" tabindex="-1" id="simcha-modal" role="dialog">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">New Simcha</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <form method="POST" action="/Home/newSimcha">
                                    <div class="form-group">
                                        <label>Simcha Name</label>
                                        <input class="form-control" name="Name" placeholder="Simcha Name" type="text">
                                    </div>
                                    <div class="form-group">
                                        <label>Date</label>
                                        <input type="date" name="Date" class="form-control" id="datepicker">
                                    </div>
                                    <div class="modal-footer">
                                        <button class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                        <button class="btn btn-primary" name="commit">Save</button>
                                    </div>
                                </form>
                            </div>
                        </div><!-- /.modal-content -->
                    </div><!-- /.modal-dialog -->
                </div><!-- /.modal -->
            </div>
</body>
@section Scripts {
  <script src="~/js/JavaScript1.js"></script>
};