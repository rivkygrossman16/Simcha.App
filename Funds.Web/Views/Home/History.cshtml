@model historyView
<div class="container">
    <main role="main" class="pb-3" style="margin-top: 60px;">

        <div class="header">
            <h1>History for @Model.contributor.FirstName @Model.contributor.LastName</h1>
            <h3>Current Balance: @Model.contributor.balance</h3>
        </div>

        <div class="row header">
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <tr>
                        <th>Action</th>
                        <th>Date</th>
                        <th>Amount</th>
                    </tr>
                    @foreach (var his in Model.history)
                    {

                        <tr>
                            <td>
                                @his.Name
                        </td>
                        <td style="text-align: center; vertical-align: middle;">
                            @his.Date.ToLongDateString()
                        </td>
                        <td style="text-align: center; vertical-align: middle;">
                            @his.amount
                        </td>
                    </tr>
                }
                </table>
            </div>
        </div>

        <div style="text-align:center;">
            <a class="btn-lg btn-danger" href="/Home">Back to Contributors</a>
        </div>
    </main>
</div>